<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical" >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        
		<RadioGroup
			android:id="@+id/dtnapps_selectarea_areachange_radioGrop"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<RadioButton
			    android:id="@+id/dtnapps_selectarea_personchange_radioButton"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="手动改变区域" />
			<RadioButton
			    android:id="@+id/dtnapps_selectarea_randomchange_radioButton"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="随机改变区域" />
			<RadioButton
			    android:id="@+id/dtnapps_selectarea_scriptchange_radioButton"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="脚本改变区域" />
	    </RadioGroup>
    </LinearLayout>

    <ListView
        android:id="@+id/dtnapps_selectarea_neighbourarea_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
	</ListView>
    
    
</LinearLayout>